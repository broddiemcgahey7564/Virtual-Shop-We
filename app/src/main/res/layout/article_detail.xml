<LinearLayout

        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_margin="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/article_detail"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:layout_marginTop="20dp"
            android:textSize="32sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/tv_article_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"/>

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/image_product_detail"
            android:layout_gravity="center"/>

    <TextView
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/tv_article_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:gravity="center"/>

    <TextView
            android:layout_marginTop="20dp"
            android:textSize="26sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/tv_article_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:gravity="center"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="@string/article_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_modify"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                tools:ignore="UnusedAttribute"/>

        <Button
                android:text="@string/article_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_delete"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/colorAccent"
                tools:ignore="UnusedAttribute"/>
    </LinearLayout>

</LinearLayout>